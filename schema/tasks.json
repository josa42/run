{
  "$schema": "http://json-schema.org/draft-07/schema",
  "oneOf": [
    {
      "$comment": "Project tasks",
      "$ref": "#/definitions/tasks"
    },
    {
      "$comment": "Global tasks",
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "$ref": "#/definitions/tasks"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  ],
  "definitions": {
    "step": {
      "oneOf": [
        {
          "$ref": "#/definitions/command"
        },
        {
          "$ref": "#/definitions/run"
        },
        {
          "$ref": "#/definitions/task"
        }
      ]
    },
    "command": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "command"
      ],
      "additionalItems": false
    },
    "run": {
      "type": "object",
      "properties": {
        "run": {
          "type": "string"
        },
        "shell": {
          "type": "string",
          "enum": [
            "bash",
            "zsh",
            "fish"
          ]
        },
        "run-in": {
          "type": "string",
          "default": "."
        }
      },
      "required": [
        "run"
      ],
      "additionalItems": false
    },
    "task": {
      "type": "object",
      "properties": {
        "task": {
          "type": "string"
        }
      },
      "required": [
        "task"
      ],
      "additionalItems": false
    },
    "tasks": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/step"
          },
          "additionalItems": false
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    }
  }
}
